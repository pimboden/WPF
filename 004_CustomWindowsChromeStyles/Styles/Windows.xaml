<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Learn.Wpf.CustomWindowsChromeStyles">

    <ResourceDictionary.MergedDictionaries>
        <!-- Order is Important like CSS-->
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="Fonst.xaml"/>
    </ResourceDictionary.MergedDictionaries>


    <!--Window Header Drop Shadow-->
    <Style  TargetType="{x:Type Border}" x:Key="HeaderDropShadow">
        <Setter Property="BorderThickness" Value="0 0.2 0 0"/>
        <Setter Property="Height" Value="6"/>
    </Style>

</ResourceDictionary>